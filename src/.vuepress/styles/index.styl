.home .hero img
  max-width 450px!important

p, li
  text-align justify

p.description, p.action
  text-align center

body {
    counter-reset: figures;
    counter-reset: tables;
}

figure {
    counter-increment: figures;
    text-align: center;
}

figcaption {
    font-style: normal;
    font-weight: bold;
    display: inherit;
    text-align: center;
    font-size: 90%;
}

figcaption:before {
    content: 'Figura ' counter(figures) ' - ';
}

table {
    counter-increment: tables;
}

table>caption {
    font-style: normal;
    font-weight: bold;
    caption-side: top;
    text-align: center;
    font-size: 90%;
    background: none;
    border-bottom: none;
    color: #172b4d;
}

table>caption:before {
    content: 'Tabela ' counter(tables) ' - ';
}

.custom-block
  &.col-wrapper
    @media (min-width: 992px)
      &
        display flex

  &.col-half
    width 100%

    @media (min-width: 992px)
      &
        flex 0 0 50%
        max-width 50%
        text-align center

